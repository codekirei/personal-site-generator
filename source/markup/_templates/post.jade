extends /base

block vars
  - var body = 'has-banner'

block banner
  h1.banner__title!= data.title
  span.banner__time
    time.banner__date.replace-time(datetime!= data.posted)!= data.date
    |  &#x2014 
    span.banner__ert!= data.ert
    |  minute read
  ul.banner__tags
    each tag in data.tags
      li.banner__tag!= tag

block content
  article.content(role='article')!= data.content
    img.fleuron(src='/img/kunai-fleuron.png', alt='fleuron')
  include /partials/author
