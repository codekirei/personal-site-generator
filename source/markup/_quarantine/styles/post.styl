.post-content
  padding rem(40px) 0
  img
    max-width 100%
    margin rem(30px) auto
    display block
  p,li
    color $text
    code
      color $code
  a
    mainFont(300)
    color $primary
    text-decoration none
    border-bottom 2px solid $primary
  iframe
    margin-top rem(30px)
    width 100%
  #twitter-widget-0
    margin auto !important
  h1,h2,h3,h4,h5
    mainFont(800)
  h1
    font-size rem(30px)
    line-height 1.4
    +above($bp)
      font-size rem(45px)
  h2
    font-size rem(22px)
    line-height 1.4
    +above($bp)
      font-size rem(35px)
  h3
    font-size rem(18px)
    line-height 1.4
    +above($bp)
      font-size rem(25px)
  ul,ol
    padding-left rem(40px)
  ul.post-list
    padding 0
    +below($bp)
      padding 0 rem(20px)
  blockquote
    center(rem(730px))
    border-left rem(5px) solid $primary
    padding 0 rem(30px)
    margin rem(50px) auto
    +below($bp)
      width 70%
    p
      color rgba(0,0,0,0.6)
      margin 0
      +below($bp)
        font-size rem(18px)
        line-height 1.5
        padding 0
  hr
    center(rem(760px))
    border 1px solid $gray
    margin 50px auto

.share
  center(800px)
  text-align center
  border-top 1px solid $gray
  padding-top rem(20px)
  svg
    margin rem(15px)
    size(35,35)
  a
    text-decoration none
    &:hover svg
      fill $primary


table
  margin rem(50px) auto
  +below($bp)
    display none
  th, td
    border rem(2px) solid #ccc
    padding rem(5px)

.tag-title
  mainFont(300)
  font-size rem(36px)
  margin-top rem(60px)
  center(rem(800px))
  +below($bp)
    font-size rem(28px)
    margin-top rem(20px)
    padding 0 rem(20px)

.post-list
  list-style none
  margin rem(25px) auto
  +below($bp)
    padding 0 rem(20px)
  a
    display block
    border-bottom 1px solid darken($gray,10%)
    padding rem(10px) 0
    text-decoration none
    transition all .5s
    &:hover
      color $primary--hover
      border-bottom 1px solid $primary--hover
  .entry-date
    float right
    +below($bp)
      display none
