extends /base

block head
  title!= data.title
  meta(name='description', content!= data.description)

block banner
  h1.banner__title Code Kirei
  h2.banner__description - Beautiful Code -

block content
  section.index-posts
    each post in data.posts
      article.index-post(role='article')
        a.index-post__title(href= post.slug)
          h3!= post.title
        .index-post__date
          span posted:
          time.index-post__time.replace-time(datetime!= post.posted)!= post.date
        .index-post__preview!= post.preview
        a.index-post__read-button(href= post.slug) read post
        .index-post__tags
          span tags:
            each tag in post.tags
              span.index-post__tag!= tag
