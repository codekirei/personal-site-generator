size(width = 30, height = 30)
  width width px
  height height px

.icons-home
  text-align center
  a
    display inline-block
    padding rem(15px)
    margin rem(2px)
    border-radius 50%
    border rem(2px) solid $accent
    line-height 0
    transition all .7s
    .icon
      fill $accent
      size(18,18)
      +above($bp)
        size()
    &:hover
      background $accent
      .icon
        fill $primary

.down
  position absolute
  bottom 50px
  width 100%
  display block
  text-align center
  .icon
    align(both)
    size(100,100)
    fill: $accent
    animation: pulse 1.5s infinite
