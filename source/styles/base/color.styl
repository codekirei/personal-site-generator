//------------------------------------------------------------------------------
// text
//------------------------------------------------------------------------------
body
  background: white

{$text}
  color: $c.text

code, {$textandh}
  &::selection
    select(dark)

pre
  background: $c.text
  code
  code *
    color: $c.lg

//------------------------------------------------------------------------------
// Custom Theme based on Atelier Lakeside Dark for hljs
//------------------------------------------------------------------------------
.hljs-comment,
.hljs-quote
  color: #7195a8

/* Atelier-Lakeside Red */
.hljs-variable,
.hljs-template-variable,
.hljs-attribute,
.hljs-tag,
.hljs-name,
.hljs-regexp,
.hljs-link,
.hljs-name,
.hljs-selector-id,
.hljs-selector-class
  color: #d22d72

/* Custom Orange-Gold */
.hljs-number,
.hljs-meta,
.hljs-built_in,
.hljs-builtin-name,
.hljs-literal,
.hljs-type,
.hljs-params
  color: #ac8322

/* Atelier-Lakeside Green */
.hljs-string,
.hljs-symbol,
.hljs-bullet
  color: #568c3b

/* Atelier-Lakeside Blue */
.hljs-title,
.hljs-section
  color: #257fad

/* Atelier-Lakeside Purple */
.hljs-keyword,
.hljs-selector-tag
  color: #6b6bb8

.hljs
  color: #7ea2b4

.hljs-emphasis
  font-style: italic

.hljs-strong
  font-weight: bold
