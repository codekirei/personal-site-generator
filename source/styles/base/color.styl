//------------------------------------------------------------------------------
// text
//------------------------------------------------------------------------------
p, li, span
  color: $c.text

//------------------------------------------------------------------------------
// header
//------------------------------------------------------------------------------
header
  .icons
    &__link
      border-color: white
    &__svg
      fill: white

.scroll-down__svg
  fill: white

.index-banner
  background: $c.prime
  &__title
  &__description
    color: white

.post-banner
  background: $c.prime
  &__title
    color: white

//------------------------------------------------------------------------------
// index
//------------------------------------------------------------------------------
.index-post
  border-color: $c.lg
  &__date-link
    color: black
  &__title
    color: black

//------------------------------------------------------------------------------
// post
//------------------------------------------------------------------------------
.author
  background: $c.lg
  &__title
    color: $c.dg

//------------------------------------------------------------------------------
// footer
//------------------------------------------------------------------------------
footer
  background: $c.prime
