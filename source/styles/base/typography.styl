@font-face {
  font-family: 'open_sanslight'
  src: url('/fonts/OpenSans-Light-webfont.woff') format('woff')
}

verdana($weight = normal)
  font-family: verdana
  font-weight: $weight

opensans()
  font-family: 'open_sanslight', sans-serif
  font-weight: normal

{$h}
  verdana(bold)

a,p,type,div,span
  opensans()
  font-size: 18px

  +above($bp)
    font-size: 20px

p
  line-height: 1.8

  +above($bp)
    line-height: 1.5
