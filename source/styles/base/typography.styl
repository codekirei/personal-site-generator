@font-face {
  font-family: 'open_sanslight'
  src: url('/fonts/OpenSans-Light-webfont.woff') format('woff')
}

verdana($weight = normal)
  font-family: verdana
  font-weight: $weight

opensans()
  font-family: 'open_sanslight', sans-serif
  font-weight: normal

h1,h2,h3,h4,h5,h6
  verdana(bold)

a,p,type,div,span
  opensans()

p
  line-height: 1.5
