//------------------------------------------------------------------------------
// font families
//------------------------------------------------------------------------------

// default
//------------------------------------------------------------------------------
{$text}
  font()

// bold
//------------------------------------------------------------------------------
.index-post__read-button
.index-post__tag
.menu__link
.hello-button
.footer-nav__link
{$h}
  font(bold)

// fixed
//------------------------------------------------------------------------------
code
code *
  font(fixed)

//------------------------------------------------------------------------------
// lists
//------------------------------------------------------------------------------
.content li
  text-indent: -1em
  padding-left: 1em

//------------------------------------------------------------------------------
// font sizes
//------------------------------------------------------------------------------
pre > code
{$text}
  fs: 18px
  +above($bp)
    fs: 20px

// nav
//------------------------------------------------------------------------------
.menu
  &__item
  &__link
    line-height: 50px
    +above($bp)
      line-height: 100px
    fs: 50px
    +above($bp)
      fs: 100px

// topbar
//------------------------------------------------------------------------------
.topbar__title
  fs: 24px
  +above($bp)
    fs: 50px

// index
//------------------------------------------------------------------------------
.banner
  &__title
    fs: 50px
    +above($bp)
      fs: 100px
  &__subtitle
    fs: 30px
  &__date
  &__dash
  &__ert
    fs: 20px
    +above($bp)
      fs: 30px

.post
  &__title
    fs: 30px
    +above($bp)
      fs: 36px

// post
//------------------------------------------------------------------------------
.author
  &__title
    fs: 26px
  &__name
    fs: 40px

// footer
//------------------------------------------------------------------------------
.footer-nav__link
  fs: 26px

//------------------------------------------------------------------------------
// line-height
//------------------------------------------------------------------------------
.menu__item
{$h}
  line-height: 1

p
main li
  line-height: 1.8

//------------------------------------------------------------------------------
// other
//------------------------------------------------------------------------------
{$h}
  font-weight: normal

p
  max-width: $linewrap
