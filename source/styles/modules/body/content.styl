.content
  p-y: $gap
  fxbx(y)

  {$h}
    m-y: $gap2
    width: 100%
    max-width: $linewrap
    text-align: left
    p-x: 5%
    +above($linewrap + 200) // magic
      p-x: 0

  p,ul,ol,iframe,blockquote
    m-s: $gap2
    width: 100%
    max-width: $linewrap
    text-align: left
    p-x: 5%
    +above($linewrap + 200) // magic
      p-x: 0

  blockquote > p
    m-s: 0
    p-e: 0

  pre
    overflow-x: auto
    m-s: $gap2
    width: 100%
    text-align: left
    fxbx(y)
    code
      width: 100%
      p: $gap2 5%
      +above($linewrap + 200) // magic
        p-x: 0
      max-width: $linewrap

  a
    transition: color 0.5s ease, background 0.5s ease
    &:hover
    &:focus
      color: white
      background: $c.text

  blockquote p
    p-w: $gap2
    b-w: $gap2
    border-color: $c.gray
