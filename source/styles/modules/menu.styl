.menu-toggle
  position: fixed
  size: 35px
  right: 12px
  top: 12px
  +above($bp)
    size: 50px
    right: 25px
    top: 25px
  &__svg
    size: inherit

.menu
  height: 100vh
  width: 100vw
  position: fixed
  fxbx(y)
  text-align: center
  opacity: 0

  &__list
    p-y: $gap

  &__item:not(:last-child)
    m-s: $gap
    +above($bp)
      m-s: $gap

  &__link
    text-decoration: none

// state (interacts with JS)
//------------------------------------------------------------------------------
.menu
  visibility: hidden
  &--visible
    visibility: visible
