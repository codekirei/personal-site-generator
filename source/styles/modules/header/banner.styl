.banner
  theme(white, $c.prime)
  height: 100vh
  fxbx(y)
  text-align: center

  &__content
    max-width: 80%

  &__title
    p-y: $gap2
    +above($bp)
      p-y: $gap

  &__subtitles
    +above($bp)
      fxbx(x)

  &__subtitle:first-of-type
    +above($bp)
      p-e: 0.5em

  &__logo
    width: 75%
    max-width: 600px
    max-height: 50vh
    object-fit: contain
