$postbp = 750px

.index-post
  width: 100%
  display: flex
  justify-content: center
  border-bottom: 3px solid $gray

  &__content
    padding: $gap
    display: flex
    flex-direction: row-reverse
    +below($postbp)
      flex-direction: column-reverse

  &__date
    display: flex
    flex-direction: column
    justify-content: center
    +below($postbp)
      padding-top: $gap
    +above($postbp)
      padding-left: $gap

  &__date-link
    color: black
    text-decoration: none

  &__text
    max-width: 700px // magic

  &__title
    color: black
    display: inline-block
    text-decoration: none
    margin-bottom: ($gap / 2)
    font-size: 30px
