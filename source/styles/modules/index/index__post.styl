.index-posts
  fxbx(y)
  m-n: $gap

.index-post
  p-x: 5%
  &:not(:last-child)
    b-s: 3px
  m-s: $gap
  +above($bp)
    p: $gap

  &__title
  &__date
  &__preview
  &__read-button
  &__tags
    m-s: ($gap / 2)

  &__title
    display: inline-block
    text-decoration: none

  &__read-button
    display: inline-block
    text-decoration: none
    b: 2px 5px
    p-x: 8px

  &__tag
    b: 3px 5px
    p: 3px 8px
    m-w: 8px
