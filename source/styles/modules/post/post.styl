.post
  p-y $gap
  fxbx(y)

  {$h}
    m-s: $gap2
    width: 100%
    max-width: $linewrap
    text-align: left
    p-x: 5%
    +above($linewrap + 200) // magic
      p-x: 0

  p,ul,ol,iframe
    m-s: $gap2
    width: 100%
    max-width: $linewrap
    text-align: left
    p-x: 5%
    +above($linewrap + 200) // magic
      p-x: 0

  pre
    overflow-x: auto
    m-s: $gap2
    width: 100%
    text-align: left
    fxbx(y)
    code
      width: 100%
      p: $gap2 5%
      +above($linewrap + 200) // magic
        p-x: 0
      max-width: $linewrap
