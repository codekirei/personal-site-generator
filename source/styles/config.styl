$bp = 760px
$linewrap = 900px
$gap = 40px
$gap2 = round($gap / 2)
$gap4 = round($gap / 4)

// nav toggle
//------------------------------------------------------------------------------
$toggleW = 48px
$toggleWSm = 30px
$togglePos = 25px
$togglePosSm = 10px
$toggleH = round($toggleW / 6)
$toggleHSm = round($toggleWSm / 6)

// topbar
//------------------------------------------------------------------------------
$topbar = $toggleW - $toggleH + $togglePos * 2
$topbarSm = $toggleWSm - $toggleHSm + $togglePosSm * 2

// button
//------------------------------------------------------------------------------
$smButtonH = 35px
$buttonH = 40px

// colors
//------------------------------------------------------------------------------
$c = {
  prime: #B00000, // primary
  acc: #fff,      // accent
  lg: #eee,       // light gray
  gray: #aaa,     // gray
  dg: #555,       // dark gray
  text: #222
}
$c[primeHover] = darken($c.prime, 50%)
