$postbp = 750px
$postflow = 40px

.post
  width: 100%
  display: flex
  justify-content: center
  border-bottom: 3px solid $gray

  &__content
    padding: $postflow
    display: flex
    flex-direction: row-reverse
    +below($postbp)
      flex-direction: column-reverse

  &__date
    display: flex
    flex-direction: column
    justify-content: center
    +below($postbp)
      padding-top: $postflow
    +above($postbp)
      padding-left: $postflow

  &__date-link
    color: black
    text-decoration: none
    font-size: 20px

  &__text
    max-width: 700px

  &__title
    color: black
    display: inline-block
    text-decoration: none
    margin-bottom: ($postflow / 2)
    font-size: 30px

  &__preview
    font-size: 20px
